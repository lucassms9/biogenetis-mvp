<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    colors="true"
    processIsolation="false"
    stopOnFailure="false"
    syntaxCheck="false"
    bootstrap="./tests/bootstrap.php"
    >

    <!-- Add any additional test suites you want to run here -->
	<testsuites>
		<testsuite name="Database Test Suite">
			<file>./tests/TestCase/DatabaseSuite.php</file>
		</testsuite>
	</testsuites>

	<listeners>
		<listener
				class="\Cake\TestSuite\Fixture\FixtureInjector"
				file="./vendor/cakephp/cakephp/src/TestSuite/Fixture/FixtureInjector.php">
			<arguments>
				<object class="\Cake\TestSuite\Fixture\FixtureManager"/>
			</arguments>
		</listener>
		<listener
				class="\CakeDC\OracleDriver\TestSuite\Fixture\OracleFixtureInjector"
				file="./src/TestSuite/Fixture/OracleFixtureInjector.php">
			<arguments>
				<object class="\CakeDC\OracleDriver\TestSuite\Fixture\OracleFixtureManager"/>
			</arguments>
		</listener>
	</listeners>

	<!-- Prevent coverage reports from looking in tests, vendors, config folders -->
	<filter>
		<whitelist>
			<directory suffix=".php">./src/</directory>
			<directory suffix=".ctp">./src/</directory>
		</whitelist>
	</filter>

	<php>
        <ini name="memory_limit" value="-1"/>
        <ini name="apc.enable_cli" value="1"/>
		<env name="db_dsn"
			 value="oracle://username:password@XE?className=CakeDC\OracleDriver\Database\OracleConnection&amp;driver=CakeDC\OracleDriver\Database\Driver\OracleOCI&amp;host=oracle11g&amp;database=XE"/>
		<!-- oracle pdo
		<env name="db_dsn" value="oracle://username:password@XE?className=CakeDC\OracleDriver\Database\OracleConnection&amp;driver==CakeDC\OracleDriver\Database\Driver\OraclePDO&amp;host=oracle11g&amp;database=XE"/>


		 oracle oci

		<env name="db_dsn" value="oracle://username:password@XE?className=CakeDC\OracleDriver\Database\OracleConnection&amp;driver==CakeDC\OracleDriver\Database\Driver\OracleOCI&amp;host=oracle11g&amp;database=XE"/>

		-->
	</php>
</phpunit>

